@using shoping.Models
@{
    Model1 db = new Model1();
    Account a = db.Accounts.FirstOrDefault();
    if ( Session["admin"] == null)
    {

        Response.Redirect("/Home/Customer_login");
    }
    else
    {

        a = (Account)Session["admin"];
    }



    ViewBag.Title = "_Layout_admin";
}



