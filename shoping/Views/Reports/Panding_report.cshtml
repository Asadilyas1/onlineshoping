@model IEnumerable<shoping.Models.Order>


@{

    int no = 0;
    ViewBag.Title = "Panding_report";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Panding_report</h2>


<table class="table table-bordered table-active table-dark">

    <tr>
        <th>Sr no</th>
        <th>Order id</th>
        <th>Customer Name</th>
        <th>Customer adress</th>
        <th>Customer Emails</th>
        <th>Customer NO</th>
        <th>Order type</th>
        <th>Order date time</th>
        <th>Order status</th>
        <th>Action</th>

    </tr>



    @foreach (var v in Model)
    {
        no++;
        <tr>
            <td align="center">@no</td>
            <td align="center">Order_@v.Order_id</td>
            <td>@v.Order_Name</td>
            <td>@v.Order_adress</td>
            <td>@v.Order_Email</td>
            <td>@v.Oder_phone_No</td>
            <td>@v.Order_type</td>
            <td>@DateTime.Parse(v.Oder_date_time.ToString()).ToLongDateString()</td>
            <td>@v.Order_delivery_status</td>
            <td><a href="@Url.Action("update","Reports" , new { id= v.Order_id } )" class="btn btn-success ">Update  </a></td>


        </tr>


    }



</table>