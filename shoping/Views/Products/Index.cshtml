@model IEnumerable<shoping.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}


    <a class="btn btn-warning "   href="@Url.Action("Create","Products")">Create </a>
<br />
<br />







<table class="table table-active table-bordered">
    <tr>
        <th>
           Sub Category 
        </th>
        <th>
          Product Name
        </th>
        <th>
          Pic
        </th>
        <th>
           Prachase price
        </th>
        <th>
            Sale price
        </th>
        <th>
           Description
        </th>
        <th>
         Status
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sub_category.Sub_category_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Name)
        </td>
        <td>
            <img src="@Url.Content(item.Product_Pic)"  height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Prachase_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Sale_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Status)
        </td>
        <td>
            <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("Edit","Products", new {id=item.Product_id } )">Edit</a>
            <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details","Products", new {id=item.Product_id } )">Details</a>
            <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete","Products", new {id=item.Product_id } )">Delete</a>



           
        </td>
    </tr>
}

</table>
